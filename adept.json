{
    "id": "adept_window",
    "label": "Permitting",
    "targetScript": "adept",
    "modelName": "permitting",
    "condenseElements": true,
    "height": 700,
    "width": 700,
    "elements": [
        {
            "id": "workspace_list",
            "type": "list",
            "elements": [
                {
                    "id": "workspace",
                    "type": "folder",
                    "label": "Workspace",
                    "args_id": "workspace_dir",
                    "required": true,
                    "validateAs": {"type": "folder", "permissions": "rwx"},
                    "helpText": "Select a folder to be used as your workspace.  If the folder you select does not exist, it will be created for you.<br/><br/>This folder will contain the rasters produced by this model.  <b>If datasets already exist in this folder, they will be overwritten</b>.",
                    "defaultValue": "./adept_workspace"
                },
                {
                    "id": "project_footprint",
                    "type": "file",
                    "args_id": "project_footprint",
                    "label": "Project Footprint",
                    "validateAs": {
                        "type": "OGR"
                    },
                    "defaultValue": "./data/colombia_tool_data/Example permitting footprints/Example_mining_projects.shp"
                },
                {
                    "id": "impact_type",
                    "args_id": "impact_type",
                    "type": "dropdown",
                    "label": "Impact type",
                    "options": ["Road/Mine", "Bare ground/Paved"],
                    "returns": "ordinals",
                    "defaultValue": 0
                },
                {
                    "id": "area_of_influence",
                    "args_id": "area_of_influence",
                    "type": "file",
                    "label": "Area of Influence (optional)",
                    "validateAs": {
                        "type": "file"
                    },
                    "defaultValue": "./data/colombia_tool_data/sample_aoi.shp"
                },
                {
                    "id": "ecosystems_map",
                    "args_id": "ecosystems_map",
                    "type": "hideableFileEntry",
                    "label": "Use custom ecosystems map",
                    "validateAs": {"type": "GDAL"}
                },
                {
                    "id": "threat_map",
                    "args_id": "threat_map",
                    "type": "file",
                    "label": "Threat map (optional)",
                    "validateAs": {"type": "GDAL"}
                },
                {
                    "id": "species_richness_map",
                    "args_id": "species_richness_map",
                    "type": "file",
                    "label": "Species richness map (optional)",
                    "validateAs": {"type": "GDAL"}
                },
                {
                    "id": "avoidance_areas",
                    "args_id": "avoidance_areas",
                    "type": "file",
                    "label": "Avoidance areas (optional)",
                    "validateAs": {
                        "type": "OGR",
                        "layers": [
                            {
                                "name": {"inheritFrom": "file"},
                                "type": "polygons"
                            }
                        ]
                    }
                },
                {
                    "id": "conservation_portfolio",
                    "args_id": "conservation_portfolio",
                    "type": "file",
                    "label": "Conservation portfolio (optional)",
                    "validateas": {
                        "type": "OGR",
                        "layers": [
                            {
                                "name": {"inheritfrom": "file"},
                                "type": "polygons"
                            }
                        ]
                    }
                },
                {
                    "id": "previously_granted_impacts",
                    "args_id": "previously_granted_impacts",
                    "type": "file",
                    "label": "Previously granted impacts (optional)",
                    "validateas": {
                        "type": "GDAL"
                    }
                },
                {
                    "id": "previously_selected_offsets",
                    "args_id": "previously_selected_offsets",
                    "type": "file",
                    "label": "Previously selected offsets (optional)",
                    "validateas": {
                        "type": "GDAL"
                    }
                },
                {
                    "id": "custom_static_maps",
                    "args_id": "custom_static_maps",
                    "type": "file",
                    "label": "Custom static map (optional)",
                    "validateas": {
                        "type": "GDAL"
                    },
                    "defaultValue": "./data/colombia_tool_data/sample_static_impact_map.tif"
                }
            ]
        }
    ]
}


