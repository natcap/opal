{
    "general": {
        "name": "Adept",
        "version": "0.0",
        "parameters": ["VERSION", "ARCHITECTURE"],
        "build_folder": "..\\adept",
        "publisher": "The Natural Capital Project",
        "website": "http://www.naturalcapitalproject.org",
        "languages": ["English", "Spanish"],
    },
    "installer": {
        "title": "{name} {version}",
        "filename": "{name}_{version}_Setup.exe",
        "install_dir": "C:\\Program Files\\{name} {version}",
        "save_log": true,
        "assert_not_running": true,
        "assert_arch_is_compatible": true,
        "install_log": "install_log.txt",
        "license": "../LICENSE.txt",
        "icon": "installer_icon.png",
        "start_menu": [
            {
                "name": "{name}",
                "target": "launch_adept.exe",
                "icon": "{icon}"
            },
            {
                "name": "{name} Documentation",
                "target": "adept_documentation.docx"
            }
        ]
    },
    "uninstaller": {
        "icon": "{NSISDIR}\\Contrib\\Graphics\\Icons\\orange-uninstall.ico",
        "title": "Uninstall {name} {version}",
        "filename": "Uninstall {name} {version}"
    }
}
